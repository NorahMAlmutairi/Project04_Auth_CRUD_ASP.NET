@model ProductModel
@{
    var Product = (ProductModel)ViewData["Product"];
}
<form asp-action="Create" method="post" class="form-horizontal">


    <div class="form-group">
        <label asp-for="Name">Name</label>
        <div>
            <input asp-for="Name" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <div>
            <input asp-for="Price" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ProductDetails">Product Details</label>
        <div>
            <input asp-for="ProductDetails" />
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Image">Image URL</label>
        <div>
            <input asp-for="Image" />
        </div>
    </div>



    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>